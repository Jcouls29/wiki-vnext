  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "Run Core Server",
      "program": "index.js",
      "request": "launch",
      "cwd": "${workspaceFolder}/core",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "type": "pwa-node"
    }
  ]
}
